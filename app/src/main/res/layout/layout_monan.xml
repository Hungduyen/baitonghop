<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageHinh"
        android:layout_width="101dp"
        android:layout_height="149dp" />

    <TextView
        android:id="@+id/hoten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageHinh"
        android:text="Họ tên"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/capbac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoten"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imageHinh"
        android:text="Mô tả"
        android:textColor="#10EA01"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/noicongtac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/capbac"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/imageHinh"
        android:text="Nơi công tác"
        android:textColor="#10EA01"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/quocgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noicongtac"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imageHinh"
        android:text="Quốc gia"
        android:textColor="#10EA01"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/sosao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quocgia"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imageHinh"
        android:text="Số sao"
        android:textColor="#10EA01"
        android:textSize="20sp"
        android:textStyle="italic" />


</RelativeLayout>